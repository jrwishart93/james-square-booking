{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node", "react", "react-dom"],
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",                      // âœ… minimal addition
    "paths": {
      "@/*": ["./src/*"],
      "@/components/fire-action": ["./components/fire-action"],
      "@/components/fire-action/*": ["./components/fire-action/*"]
    }
  },
  "include": ["next-env.d.ts", "src/global.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
